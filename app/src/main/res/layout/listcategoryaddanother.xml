<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/listaddname"
            android:hint="Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/listadddes"
            android:layout_below="@+id/listaddname"
            android:hint="Description"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/listaddprice"
            android:layout_below="@+id/listadddes"
            android:hint="Price"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/listadddis"
            android:layout_below="@+id/listaddprice"
            android:hint="Discount"/>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/listadddis">


            <info.hoang8f.widget.FButton
                android:id="@+id/fbtnselect"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="8dp"
                android:shadowColor="@color/colorblack"
                android:text="Select"
                android:textColor="@color/colorwhite"
                android:textSize="15sp"
                android:textStyle="bold"
                app:buttonColor="#32CD32"
                app:cornerRadius="4dp"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:layout_below="@+id/editinput" />

            <info.hoang8f.widget.FButton
                android:id="@+id/fbtnupload"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:shadowColor="@color/colorblack"
                android:text="Upload"
                android:textColor="@color/colorwhite"
                android:textSize="15sp"
                android:textStyle="bold"
                app:buttonColor="#32CD32"
                app:cornerRadius="4dp"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:layout_below="@+id/editinput" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>